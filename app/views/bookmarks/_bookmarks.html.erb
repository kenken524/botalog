  <% if user_signed_in? %>
    <% if @plant.bookmarks.exists?(user_id: current_user.id) %>
      <%= link_to plant_bookmark_path(@plant, plant_id: @plant.id), method: :delete, remote: true, class: "btn btn-sm bookmark-button" do %>
      <i class="fa-solid fa-bookmark fa-2xl" style="color: #dfe236;"></i>
      <% end %>
      <% else %>
      <%= link_to plant_bookmarks_path(@plant, plant_id: @plant.id), method: :post, remote: true, class: "btn btn-sm bookmark-button" do %>
      <i class="fa-regular fa-bookmark fa-2xl"></i>
      <% end %>
    <% end %>
  <% else %>
    <%= link_to 'ログイン', new_user_session_path, class: "btn btn-primary btn-sm" %>
<% end %>