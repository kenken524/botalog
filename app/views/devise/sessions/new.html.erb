<main class="p-3">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="container">
      <div class="row row-cols-1 justify-content-center">
        <div class="card mb-2 shadow-sm" style="width: auto;">
          <div class="card-header d-flex align-items-center">
            <h3>ログイン</h3>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              <div class="field">
                <%= f.label :email, class: "form-label" %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
              </div>
            </li>
            <li class="list-group-item">
              <div class="field">
                <%= f.label :パスワード, class: "form-label" %>
                <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
              </div>
            </li>
            <li class="list-group-item">
              <div class="actions d-flex justify-content-center">
                <%= f.submit "ログインする", class: "btn btn-success" %>
              </div>
              <div class="d-flex justify-content-center"><%= render "devise/shared/links" %></div>
            </li>
          </ul>
        </div>
      </div>
    </div>

  <% end %>
  <div class="d-flex justify-content-center"><%= link_to "Back", :back %></div>
</main>
