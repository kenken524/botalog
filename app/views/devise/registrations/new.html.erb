<main class="p-3">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="container">
      <div class="row row-cols-1 justify-content-center">
        <div class="card mb-2 shadow-sm" style="width: auto;">
          <div class="card-header d-flex align-items-center">
            <h3>ユーザー新規登録</h3>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              <div class="field">
                <%= f.label :プロフィール写真, class: "form-label" %><br />
                <%= f.file_field :image, autocomplete: "image", class: "form-control" %>
              </div>
            </li>
            <li class="list-group-item">
              <div class="field">
                <%= f.label :ニックネーム, class: "form-label" %><br />
                <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", class: "form-control" %>
              </div>
            </li>
            <li class="list-group-item">
              <div class="field">
                <%= f.label :プロフィール, class: "form-label" %><br />
                <%= f.text_area :profile, autocomplete: "profile", class: "form-control" %>
              </div>
            </li>
            <li class="list-group-item">
              <div class="field">
                <%= f.label :email, class: "form-label" %><br />
                <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
              </div>
            </li>
            <li class="list-group-item">
              <div class="field">
                <%= f.label :パスワード, class: "form-label" %><em>(<%= @minimum_password_length %>字以上)</em>
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
              </div>
            </li>
            <li class="list-group-item">
              <div class="field">
                <%= f.label :パスワード再確認, class: "form-label" %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
              </div>
            </li>
            <li class="list-group-item">
              <div class="actions d-flex justify-content-center">
                <%= f.submit "アカウントを作成する", class: "btn btn-success" %>
              </div>
              <div class="d-flex justify-content-center"><%= render "devise/shared/links" %></div>
            </li>
          </ul>
        </div>
      </div>
    </div>
  <% end %>
  <div class="d-flex justify-content-center"><%= link_to "Back", :back %></div>
</main>
