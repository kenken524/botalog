<% if current_user != @user %>
  <% if current_user.following?(@user) %>
    <%= link_to "アンフォロー", unfollow_user_path(@user), method: :delete, class: "btn btn-danger btn-sm", remote: true %>
  <% else %>
    <%= link_to "フォロー", follow_user_path(@user), method: :post, class: "btn btn-success btn-sm", remote: true %>
  <% end %>
<% end %>