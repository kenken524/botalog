  <% if user_signed_in? %>
    <% if @plant.likes.exists?(user_id: current_user.id) %>
      <%= link_to plant_like_path(@plant, plant_id: @plant.id), method: :delete, remote: true, class: "btn btn-danger btn-sm like-button", data: { liked: true } do %>
      <i class="far fa-thumbs-up"></i><span class="likes-count"><%= @plant.likes.count %>：取消
      <% end %>
      <% else %>
      <%= link_to plant_likes_path(@plant, plant_id: @plant.id), method: :post, remote: true, class: "btn btn-success btn-sm like-button", data: { liked: false } do %>
      <i class="far fa-thumbs-up"></i> <%= @plant.likes.count %>：いいね
      <% end %>
    <% end %>
  <% else %>
    <i class="far fa-thumbs-up"></i> <%= @plant.likes.count %>：いいね
    <%= link_to 'ログインして「いいね」', new_user_session_path, class: "btn btn-primary btn-sm" %>
<% end %>