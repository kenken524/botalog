  <% if user_signed_in? %>
    <% if @carerecord.likes.exists?(user_id: current_user.id) %>
      <%= link_to care_record_like_path(@carerecord, care_record_id: @carerecord.id), method: :delete, remote: true, class: "btn btn-danger btn-sm like-button", data: { liked: true } do %>
      <i class="far fa-thumbs-up"></i><span class="likes-count"><%= @carerecord.likes.count %>：取消
      <% end %>
      <% else %>
      <%= link_to care_record_likes_path(@carerecord, care_record_id: @carerecord.id), method: :post, remote: true, class: "btn btn-success btn-sm like-button", data: { liked: false } do %>
      <i class="far fa-thumbs-up"></i> <%= @carerecord.likes.count %>：いいね
      <% end %>
    <% end %>
  <% else %>
    <i class="far fa-thumbs-up"></i> <%= @carerecord.likes.count %>：いいね
    <%= link_to 'ログインして「いいね」', new_user_session_path, class: "btn btn-primary btn-sm" %>
<% end %>